<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zawody</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>

<nav class="navbar navbar-expand-md navbar-light bg-light">
    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <partial name="_LoginPartial" />
      </li>
    </ul>
</nav>

<!--Navbar 2-->
<div class="container-fluid sticky-top bg-dark">
    <nav class="container navbar navbar-expand-md navbar-dark">
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2 justify-content-center" >
            <ul class="nav nav-tabs">
                @if (User.IsInRole("SuperAdmin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link" id="dropdownMenuLink" data-bs-toggle="dropdown" role="button" aria-expanded="false">Admin</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li><a class="dropdown-item" asp-area="" asp-controller="UserRoles" asp-action="Index">User Roles</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="RoleManager" asp-action="Index">Role Manager</a></li>
                        </ul>
                    </li>
                }
              <li class="nav-item dropdown">
                <a class="nav-link" id="dropdownMenuLink1" data-bs-toggle="dropdown" role="button" aria-expanded="false">Zawody</a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink1">
                  <li><a class="dropdown-item" asp-area="" asp-controller="Players" asp-action="Index">Gracze</a></li>
                  <li><a class="dropdown-item" asp-area="" asp-controller="Treners" asp-action="Index">Trenerzy</a></li>
                  <li> <a class="dropdown-item" asp-area="" asp-controller="Stadions" asp-action="Index">Stadiony</a></li>
                  <li> <a class="dropdown-item" asp-area="" asp-controller="Teams" asp-action="Index">Drużyny</a></li>
                </ul>
              </li>
            </ul>
        </div>
    </nav>
</div>

</header>

<div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
</div>


<div class="container">
  <footer class="py-3 my-4">
    <ul class="nav justify-content-center border-bottom pb-3 mb-3">
      <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
      <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
      <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
      <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-controller="Home" asp-action="Create">Image</a></li>
      <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-controller="Addresses" asp-action="Index">Address</a></li>
    </ul>
    <p class="text-center text-muted">© 2022 Zawody, Inc</p>
  </footer>
</div>

